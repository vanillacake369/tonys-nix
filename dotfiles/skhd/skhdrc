# skhd configuration
# Basic window navigation and management with Alt(Option) + arrow keys

# Window swapping with Alt + arrow keys
# Swap window position with the window in that direction
alt - left : yabai -m window --swap west
alt - right : yabai -m window --swap east
alt - up : yabai -m window --swap north
alt - down : yabai -m window --swap south

# Focus window with Shift + Alt + arrow keys
# Move focus to the window in that direction
shift + alt - left : yabai -m window --focus west
shift + alt - right : yabai -m window --focus east
shift + alt - up : yabai -m window --focus north
shift + alt - down : yabai -m window --focus south

# Rotate windows
# Rotate tree clockwise
alt - r : yabai -m space --rotate 90

# Flip windows
# Flip along y-axis
alt - y : yabai -m space --mirror y-axis
# Flip along x-axis  
alt - x : yabai -m space --mirror x-axis

# Balance windows
# Balance size of windows
shift + alt - 0 : yabai -m space --balance

# Restart yabai
shift + alt - r : brew services restart yabai

# Toggle window fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# Toggle window float
shift + alt - f : yabai -m window --toggle float

# Move window to space (desktop)
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5

# Focus space (desktop)
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
