{
  "mcpServers": {
    "npay-payments": {
      "command": "npx",
      "args": [
        "-y",
        "@naverpay/payments-mcp"
      ],
      "_comment": "네이버 페이"
    },
    "kakaopay": {
      "command": "npx",
      "args": [
        "-y",
        "@kakaopay-develop/mcp",
        "--tools=all",
        "--cid=TC0ONETIME"
      ],
      "env": {
        "KAKAOPAY_SECRET_KEY": "${KAKAOPAY_SECRET_KEY}"
      },
      "_comment": "카카오페이"
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "_comment": "최신 오픈소스 조회"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "_comment": "순차적 사고 설계"
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "_comment": "세션 간 단기 기억"
    },
    "webresearch": {
      "command": "npx",
      "args": [
        "-y",
        "@mzxrai/mcp-webresearch@latest"
      ],
      "_comment": "웹 검색"
    },
    "figma": {
      "type": "http",
      "url": "https://mcp.figma.com/mcp",
      "_comment": "피그마"
    },
    "gdrive": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-gdrive"
      ],
      "env": {
        "GDRIVE_CREDENTIALS_PATH": "${GDRIVE_CREDENTIALS_PATH}",
        "GDRIVE_OAUTH_PATH": "${GDRIVE_OAUTH_PATH}"
      },
      "_comment": "구글 드라이브"
    },
    "mcp-atlassian": {
      "command": "uvx",
      "args": [
        "mcp-atlassian",
        "--jira-url=${JIRA_URL}",
        "--jira-username=${JIRA_USERNAME}",
        "--jira-token=${JIRA_TOKEN}"
      ]
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "${POSTGRES_URL}"
      ]
    },
    "apple-docs": {
      "command": "npx",
      "args": [
        "apple-doc-mcp-server@latest"
      ]
    }
  }
}
